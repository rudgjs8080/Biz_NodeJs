extends layout

block content
	script(src="/js/table.js")
	style.
		section.main {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			align-items: center;
		}
		div.table {
			width: 300px;
			height: 200px;
			border: 1px solid green;
			margin: 10px;
			text-align: center;
			line-height: 200px;

			font-weight: bold;
			font-size: 20px;

			cursor: pointer;
		}
		div.table:hover {
			box-shadow: 1px 1px 1px blue;
		}
	- for(let i = 0 ; i < 12 ; i++)
		div.table(data-table_id= i+1) !{i+1} 번 테이블

	
