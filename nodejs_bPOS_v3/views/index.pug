extends layout

block content
	script(src="/js/table.js")
	style.
		section.main {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			align-items: center;
		}
		div.table {
			width: 300px;
			height: 200px;
			border: 1px solid green;
			margin: 10px;
			text-align: center;
			line-height: 200px;

			font-weight: bold;
			font-size: 20px;

			cursor: pointer;
		}
		div.table:hover {
			box-shadow: 1px 1px 1px blue;
		}
		div.order_yes {
			background-color: #00AA00;
		}
	each table,index in TABLES
		if(table.order_count > 0)
			div.table.order_yes(data-table_id= table.id) !{table.table_name}
				span ( !{table.order_count} )
		else
			div.table(data-table_id= table.id) !{table.table_name}
